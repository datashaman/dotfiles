[alias]
    bgd          = !git branch -vv | grep ' gone' | cut -d' ' -f3 | xargs git branch -d
    bgD          = !git branch -vv | grep ' gone' | cut -d' ' -f3 | xargs git branch -D
    browse       = !hub browse
    bv           = !git branch --color -v
    bvv          = !git branch --color -vv
    cb           = !git-cut-branch
    ci           = commit
    compare      = !hub compare
    cp           = !git-cherry-pick
    fp           = format-patch --stdout
    grab         = !git-grab
    incoming     = !git-whatchanged ..origin
    in           = !git-whatchanged ..origin
    ll           = log --pretty=oneline --abbrev-commit --max-count=15 --decorate
    out          = !git-whatchanged origin..
    outgoing     = !git-whatchanged origin..
    rup          = remote update -p
    sa           = status -sb --ignore-submodules=untracked
    sh           = !git-sh
    s            = status -sb -uno --ignore-submodules=untracked
    st           = status
    thanks       = !git-thanks
    track        = !git-track
    w            = !hub browse
    wipc         = !date >> WIP && git add WIP && git commit -m ...
    wip          = !git add -u && git commit -m ...
    x            = checkout HEAD

[core]
    filemode = true
    logallrefupdates = true
    whitespace = trailing-space, tab-in-indent, tabwidth=4
	autocrlf = input

[apply]
    whitespace = error

[help]
    browser = open

[branch]
    autosetupmerge = true

[diff]
    renames = copies
    mnemonicprefix = true

[sendemail]
    smtpserver = smtp.gmail.com
    smtpserverport = 587
    smtpencryption = tls
    smtpuser = marlinf@datashaman.com

[color]
    ui = auto

[color "diff"]
    meta = blue bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "branch"]
    current = yellow reverse
    local = yellow bold
    remote = green bold
    plain = red bold

[color "status"]
    added = yellow
    changed = green bold
    untracked = blue bold

[push]
	default = current

[pull]
	default = matching

[web]
	browser = chromium-browser

[merge]
	tool = meld

[rebase]
    autoSquash = true
[rerere]
	enabled = true
